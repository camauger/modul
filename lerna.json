{
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "independent",
    "command": {
        "publish": {
            "allowBranch": [
                "master",
                "develop",
                "release/*",
                "hotfix/*"
            ]
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
